<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_1"
    tools:context=".main.MenuActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/search_bar"
        android:background="@color/dark_grey">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/search_bar"
        android:layout_above="@id/db1_root"
        android:id="@+id/menu_list"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            tools:ignore="ObsoleteLayoutParam,UselessLeaf">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/car_ads_new_UI"
                android:background="#ffffff"
                android:layout_marginVertical="20dp"
                android:orientation="horizontal"
                tools:ignore="UnusedAttribute">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/car"
                    tools:ignore="ContentDescription">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/car_text_new_UI"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Car Advertisements"
                    android:textSize="20sp"
                    android:textColor="#000"
                    tools:ignore="HardcodedText,RtlHardcoded">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:id="@+id/motorbike_ads_new_UI"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/motor_bike"
                    tools:ignore="ContentDescription">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/motorbike_text_new_UI"
                    android:text="Motor Bike Advertisements"
                    android:textSize="20sp"
                    android:textColor="#000"
                    tools:ignore="HardcodedText,RtlHardcoded">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/other_ads_new_UI"
                android:background="#ffffff"
                android:layout_marginVertical="20dp"
                android:orientation="horizontal"
                tools:ignore="UnusedAttribute">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/other"
                    tools:ignore="ContentDescription">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/other_text_new_UI"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Other Vehicle Advertisements"
                    android:textSize="20sp"
                    android:textColor="#000"
                    tools:ignore="HardcodedText,RtlHardcoded">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/service_ads_new_UI"
                android:background="#ffffff"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/service"
                    tools:ignore="ContentDescription">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/service_text_new_UI"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Spare Part and Service"
                    android:textSize="20sp"
                    android:textColor="#000"
                    tools:ignore="HardcodedText,RtlHardcoded">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/brief_ads_new_UI"
                android:background="#ffffff"
                android:layout_marginVertical="20dp"
                android:orientation="horizontal"
                tools:ignore="UnusedAttribute">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/brief"
                    tools:ignore="ContentDescription">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/brief_text_new_UI"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:text="Brief Advertisements"
                    android:textSize="20sp"
                    android:textColor="#000"
                    tools:ignore="HardcodedText,RtlHardcoded">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/db1_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4sp"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal"
                android:weightSum="3"
                tools:ignore="RtlHardcoded,UnusedAttribute,UselessParent">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/search"
                    android:layout_marginLeft="4sp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/search"
                    tools:ignore="ContentDescription,RtlHardcoded" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/add"
                    android:layout_marginLeft="4sp"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:src="@drawable/add"
                    tools:ignore="ContentDescription" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sign"
                    android:layout_marginLeft="4sp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/en"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>